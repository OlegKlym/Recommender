<?xml version="1.0" encoding="utf-8"?>
<pages:StyledPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:itemTemplates="clr-namespace:Recommender.ItemTemplates"
                  xmlns:pages="clr-namespace:Recommender.Pages"
                  xmlns:pageModels="clr-namespace:Recommender.ViewModels"
                  x:Class="Recommender.Pages.RecommendedMoviesPage"
                  x:DataType="pageModels:RecommendedMoviesPageModel">

    <pages:StyledPage.Resources>
        <itemTemplates:RecommendationItemTemplate x:Key="RecommendationItemTemplate"/>
    </pages:StyledPage.Resources>
    
    <pages:StyledPage.Content>
         <CollectionView ItemsSource="{Binding Recommendations}"
                         ItemTemplate="{StaticResource RecommendationItemTemplate}"
                         Margin="0,5,0,0"/>
    </pages:StyledPage.Content>
</pages:StyledPage>