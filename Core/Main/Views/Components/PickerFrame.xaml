<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="Recommender.Components.PickerFrame"
       x:Name="PickerFrameView"
       Style="{StaticResource EntryFrame}">

    <Picker Title="{Binding Title, Source={x:Reference PickerFrameView}}"
            TitleColor="{StaticResource EntryTextColor}"
            ItemsSource="{Binding ItemsSource, Source={x:Reference PickerFrameView}}"
            SelectedItem="{Binding SelectedItem, Source={x:Reference PickerFrameView}}"/>
</Frame>
