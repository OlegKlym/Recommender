<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms"
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
      x:Class="Recommender.Components.VideoPlayer"
      x:Name="VideoPlayerName">

    <MediaElement x:Name="videoPlayer"
                  AutoPlay="{Binding EnableAutoPlay, Source={x:Reference VideoPlayerName}}"
                  Aspect="AspectFill"
                  IsLooping="{Binding IsLooping, Source={x:Reference VideoPlayerName}}"
                  Source="{Binding Url, Source={x:Reference VideoPlayerName}}"/>
</Grid>
