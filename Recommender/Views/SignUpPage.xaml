<?xml version="1.0" encoding="UTF-8"?>
<views:BaseViewPage xmlns="http://xamarin.com/schemas/2014/forms"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:views="clr-namespace:Recommender.Views;assembly=Recommender"
                    xmlns:viewModels="clr-namespace:Recommender.ViewModels;assembly=Recommender"
                    xmlns:components="clr-namespace:Recommender.Components"
                    x:Class="Recommender.Pages.SignUpPage"
                    x:DataType="viewModels:SignUpPageModel">

      <views:BaseViewPage.PageContent>
          <ScrollView>
              <StackLayout Spacing="20"
                           VerticalOptions="Center"
                           Margin="0,40,0,0">

                   <Label HorizontalOptions="CenterAndExpand"
                           Margin="0,0,0,10"
                           Style="{StaticResource TitleLabel}"
                           Text="Реєстрація" />

                     <components:EntryFrame Margin="40,0"
                                            EntryPlaceholder="Ім'я"
                                            EntryText="{Binding FirstName, Mode=TwoWay}"/>

                     <components:EntryFrame Margin="40,0"
                                            EntryPlaceholder="Прізвище"
                                            EntryText="{Binding LastName, Mode=TwoWay}"/>

                     <components:EntryFrame Margin="40,0"
                                            EntryPlaceholder="Email"
                                            EntryText="{Binding Email, Mode=TwoWay}"/>

                     <components:EntryFrame Margin="40,0"
                                            EntryPlaceholder="Пароль"
                                            EntryText="{Binding Password, Mode=TwoWay}"
                                            IsPasswordEntry="True"/>

                     <components:PickerFrame x:Name="genderPicker"
                                             Margin="40,0"
                                             Title="Стать"
                                             ItemsSource="{Binding Genders}"
                                             SelectedItem="{Binding Gender}"/>

                     <components:DatePickerFrame Margin="40,0"
                                                 Placeholder="Дата народження"
                                                 Date="{Binding BirthDate, Mode=TwoWay}"/>

                     <Button HorizontalOptions="FillAndExpand"
                             Margin="40,20"
                             Style="{StaticResource ConfirmButton}"
                             Command="{Binding ContinueCommand}"
                             Text="Далі"/>

              </StackLayout>
          </ScrollView>
      </views:BaseViewPage.PageContent>
</views:BaseViewPage>
